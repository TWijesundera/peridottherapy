---
import Navigation from "./header/Navigation.astro";
import Hamburger from "./header/Hamburger.astro";
---

<header
  class="m-5 grid grid-cols-3 grid-rows-1 md:mb-20 md:grid-cols-2 md:gap-20"
>
  <div class="relative col-span-2 content-center md:place-self-auto">
    <h1 class="font-serif-display text-2xl font-bold md:ml-10 md:text-6xl">
      Peridot Therapy
    </h1>
  </div>
  <Hamburger class="visible md:invisible md:hidden" />
  <Navigation class="invisible hidden md:visible" />
</header>
