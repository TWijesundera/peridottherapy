---
import Navigation from "./header/Navigation.astro";
import Hamburger from "./header/Hamburger.astro";
---

<header class="grid grid-rows-1 grid-cols-3 m-5 md:grid-cols-2 md:gap-20 md:mb-20">
  <div class="relative content-center col-span-2 md:place-self-auto">
    <h1
      class="font-serif-display font-bold text-2xl md:text-6xl md:ml-10"
    >
      Peridot Therapy
    </h1>
  </div>
  <Hamburger class="visible md:invisible md:hidden" />
  <Navigation class="hidden invisible md:visible" />
</header>
