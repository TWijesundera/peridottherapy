---
import "../styles/peridot.css";
import PeridotHeader from "@components/PeridotHeader.astro";
const { color } = Astro.props;
---

<!doctype html>
<html class="scroll-smooth" lang="en-US">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>Peridot Therapy</title>
    <link rel="icon" type="image/x-icon" href="src/images/favicon.png" />
    <link
      rel="preload"
      href="/fonts/dm-serif-display-regular.woff2"
      type="font/woff2"
      as="font"
      crossorigin
    />
    <link
      rel="preload"
      href="/fonts/dm-serif-text-regular.woff2"
      type="font/woff2"
      as="font"
      crossorigin
    />
    <link
      rel="preload"
      href="/fonts/kokoro-regular.woff2"
      type="font/woff2"
      as="font"
      crossorigin
    />
  </head>
  <body class={color}>
    <PeridotHeader />
    <slot />
  </body>
</html>
